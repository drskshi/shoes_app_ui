<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFFFE"
    android:orientation="vertical">
    <!-- First Head Body -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="28dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#F7F7F1">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="120dp">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/ic_launcher_round"
                    android:importantForAccessibility="no"
                    android:src="@drawable/profile_girl"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="53dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#FEFFFE"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/firsttext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Hi, Ria"
                    android:textColor="#000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/firsttext"
                    android:padding="5dp"
                    android:layout_marginTop="8dp"
                    android:text="UI designer"
                    android:textColor="#827878"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="9dp"
            app:cardCornerRadius="150dp"
            android:backgroundTint="#D0B78B">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_search_24"
                android:backgroundTint="#D0B78B" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <!-- Second Collection Body -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="10dp"
        android:text="New Collections"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginBottom="0dp" />
    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_margin="23dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/leftshoe"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="200dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/collec_left"
                    android:scaleType="centerCrop"/>

                <Button
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom"
                    android:backgroundTint="#696868"
                    android:layout_marginStart="10dp"
                    android:text="$89" />

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/topright"
                android:layout_width="178dp"
                android:layout_height="100dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/right_1"
                    android:scaleType="centerCrop" />

                <Button
                    android:layout_width="75dp"
                    android:layout_height="43dp"
                    android:backgroundTint="#696868"
                    android:layout_marginStart="10dp"
                    android:textAlignment="gravity"
                    android:text="@string/_36" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_gravity="bottom"
                android:layout_width="120dp"
                android:layout_height="80dp"
                app:cardCornerRadius="30dp"
                >

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/right_2" />
<!--                <Button-->
<!--                    android:layout_width="55dp"-->
<!--                    android:layout_height="70dp"-->
<!--                    android:backgroundTint="#696868"-->
<!--                    android:textAlignment="textEnd"-->
<!--                    android:text="@string/_36" />-->


            </androidx.cardview.widget.CardView>
            <ImageButton
                android:id="@+id/moreshoes"
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="130dp"
                android:src="@drawable/baseline_arrow_forward_24"
                android:backgroundTint="#FEFFFE"

                />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginTop="1dp"
            android:text="Choose Category"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginBottom="0dp" />
        <Button
            android:id="@+id/seemore"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:text="see more"
            android:textStyle="bold"
            android:textSize="10sp"
            android:textColor="#ABA0AB"
            android:backgroundTint="#C7D0C7"
            />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <!-- Add multiple CardViews here -->
            <androidx.cardview.widget.CardView
                android:layout_width="98dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="#000"
                >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="All"
                    android:textSize="15sp"
                    android:backgroundTint="#000"
                    android:drawableLeft="@drawable/round_grid_view_24"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background=""
                android:backgroundTint="#F9F9FA"
                app:cardCornerRadius="20dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F9FA"
                    android:src="@drawable/adidas"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background=""
                android:backgroundTint="#F9F9FA"
                app:cardCornerRadius="20dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F9FA"
                    android:src="@drawable/nike"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background=""
                android:backgroundTint="#F9F9FA"
                app:cardCornerRadius="20dp">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="#F9F9FA"
                    android:src="@drawable/nb"
                    android:scaleType="centerInside"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
